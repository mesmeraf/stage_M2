issn = {0950-382X},
journal = {Molecular microbiology},
pages = {767--777},
pmid = {9427406},
title = {{In vivo cleavage of Escherichia coli BIME-2 repeats by DNA gyrase: genetic characterization of the target and identification of the cut site.}},
volume = {26},
year = {1997}
}
@article{Espeli2001,
