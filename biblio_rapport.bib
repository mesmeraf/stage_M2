file = {:home/jeanne/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Pobre, Arraiano - 2015 - Next generation sequencing analysis reveals that the ribonucleases RNase II, RNase R and PNPase affect bacteria.pdf:pdf},
