journal = {PLoS genetics},
keywords = {Amino Acid Sequence,Bacteria,Bacteria: genetics,Bacterial Proteins,Bacterial Proteins: chemistry,DNA, Bacterial,DNA, Bacterial: genetics,Evolution, Molecular,Gene Frequency,Genome, Bacterial,Genome, Bacterial: genetics,Inverted Repeat Sequences,Inverted Repeat Sequences: genetics,Molecular Sequence Data,Multigene Family,Oligonucleotides,Oligonucleotides: genetics,Repetitive Sequences, Nucleic Acid,Repetitive Sequences, Nucleic Acid: genetics,Replicon,Replicon: genetics,Sequence Alignment},
month = jun,
