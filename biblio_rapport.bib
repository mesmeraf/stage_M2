doi = {10.1371/journal.pgen.1002132},
file = {:home/jeanne/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Bertels, Rainey - 2011 - Within-genome evolution of REPINs a new family of miniature mobile DNA in bacteria.pdf:pdf},
